{
"form": {
"title": "Widget Configuration",
"description": "Configure your widget here",
  "fields": [
    {
      "name": {
        "type": "string",
        "label": "Name",
        "required": true,
        "placeholder": "Enter some text here :)",
        "validation": {
          "minLength": 3,
          "maxLength": 20
        }
      }
    },
    {
      "email": {
        "type": "string",
        "label": "Description",
        "required": true,
        "placeholder": "Some other text",
        "validation": {
          "pattern": "^[a-zA-Z0-9+_.-]+@[a-zA-Z0-9.-]+$"
        }
      }
    }
  ]
}
}
        